#include<stdio.h>
int main()
{
    int n, i, evencount=0, oddcount=0;
    printf("Enter the number of elements in the list: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter %d elements in the list: ", n);
    for(i=0;i<n;i++)
    {
        scanf("%d", &arr[i]);
        if(arr[i]%2==0)
            evencount++;
        else
            oddcount++;
    }
    printf("The count of even numbers in the list is %d\n", evencount);
    printf("The count of odd numbers in the list is %d\n", oddcount);
    return 0;
}
